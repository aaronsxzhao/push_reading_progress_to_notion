# Copy this to .env and fill in your real values.
NOTION_TOKEN=secret_xxx
NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
WEREAD_ROOT=/Users/YOUR_USERNAME/Obsidian/WeRead

# Notion property names (adjust if your DB differs)
# IMPORTANT: Values with spaces MUST be quoted
NOTION_TITLE_PROP="Name"
PROP_AUTHOR="Author"
PROP_STATUS="Status"
PROP_CURRENT_PAGE="Current Page"
PROP_TOTAL_PAGE="Total Page"
PROP_DATE_FINISHED="Date Finished"
PROP_SOURCE="Source"
PROP_STARTED_AT="Started At"
PROP_LAST_READ_AT="Last Read At"

# Status values (must match Notion select options exactly)
STATUS_TBR="To Be Read"
STATUS_READING="Currently Reading"
STATUS_READ="Read"

SOURCE_WEREAD="WeRead"

# Direct API mode (alternative to Obsidian file watching)
# Get cookies: Open weread.qq.com in browser, log in, then:
# Chrome: DevTools (F12) -> Application -> Cookies -> Copy as cURL or use extension
# Or use the helper script: python3 scripts/get_weread_cookies.py
WEREAD_COOKIES=your_cookies_here

# Additional book properties (optional)
PROP_COVER_IMAGE="Cover"
PROP_GENRE="Genre"
PROP_YEAR_PUBLISHED="Year Published"
PROP_RATING="Rating"
